{
    "compilerOptions": {
      "moduleResolution": "node" ,
      "lib": [
        "es2017",
        "dom"
      ],
      "typeRoots": [
        "./types/auth-flow",
        "./node_modules/@types/"
      ],
      "allowJs": true,
      "target": "es2017",
      "module": "esnext",
      "sourceMap": true,
      "removeComments": true,
      "strict": true,
      "esModuleInterop": true,
      "noEmit": true ,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-jsx",
      "baseUrl": "./",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
     
      "noImplicitAny": false,
    },

    "include": [
      "./client/**/*",
    ],
    "exclude": [
      "node_modules",
    ]
}